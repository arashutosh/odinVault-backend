# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/odin_vault"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Google OAuth (optional - set these for Google login)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://localhost:5173/auth/google/callback"

# AWS S3 / Backblaze B2 (use dummy values for testing)
AWS_ACCESS_KEY_ID="test-access-key"
AWS_SECRET_ACCESS_KEY="test-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="test-bucket"

# Server
PORT=3000
NODE_ENV="development"
CORS_ORIGINS="http://localhost:5173,https://odinvault.netlify.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES="image/*,video/*,application/pdf,text/*,application/json,application/xml"

# Trash Auto-purge (days)
TRASH_PURGE_DAYS=30

# Share Link Expiry (days)
DEFAULT_SHARE_EXPIRY_DAYS=7
